extends ../base

block head
    title index page
block content
    section.section.welcome
        
block content
    section.section.auth-block.welcome
        .auth-block__button
            .auth-block__button_link.auth-block__button_position
                a(href="#") Авторизоваться
        .auth-block__form
            .auth-block__form_wrap
                .auth-block__form_box.welcome__form_box
                    .user.hero__user
                        .user__pic.welcome__pic
                            img(src="./images/hero-pic.jpg", alt="").user__avatar
                        .user__description.welcome__description
                            .user__name.welcome__name Киров Сергей
                            .user__info Личный сайт веб-разработчика

                        ul.socials.hero__socials
                            each item in ['vk', 'git', 'in']
                                li.socials__item
                                    a(href="#" class=`socials__link_${item}`).socials__link

                .welcome__buttons.buttons
                    button.button__item
                        a(href="#").button__link.button__link-padding Мои работы
                    button.button__item
                        a(href="#").button__link.button__link-padding Обо мне
                    button.button__item
                        a(href="#").button__link.button__link-padding Блог

    footer.footer
        p © Киров Сергей | создано с любовью в LoftSchool | 2017