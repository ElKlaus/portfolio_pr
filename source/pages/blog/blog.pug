extends ../base
block head
    title blog page
block content
    .total-menu
        .total__hamburger
        .total__list
            -
                var pages = [
                    'мои работы',
                    'блог',
                    'обо мне',
                    'авторизация'
                ]
            each item in pages
                li.total__item
                    a.total__link #{item}

    section.section.hero
        .hero__row
            ul.socials.hero__socials
                each item in ['vk', 'git', 'in']
                    li.socials__item
                        a(href="#" class=`socials__link_${item}`).socials__link
            .hero__menu
                .hamburger
        .hero__title
            .section-title.blog-title
                //- object(type="image/svg+xml" data="./images/portfolio_header.svg").section-title__pic
                    //- use(xmlns:xlink = "./images/about_header.svg")
            .user.hero__user.hero__blog
                .user__pic.hero__blog-pic
                    img(src="./images/hero-pic.jpg" alt="").user__avatar
                .user__description
                    .user__name.user__name-margin.user__name-blog Блог
                    .user__info Статьи, которые я написал

    section.section.blog
        .blog__triangle.triangle
            svg(viewBox = "0 0 100 100" preserveAspectRatio = "none").triangle_left
                polygon(fill="#fff" points="0,100 -7,0 100,100")
            svg(viewBox = "0 0 100 100" preserveAspectRatio = "none").triangle_right
                polygon(fill="#fff" points="0,100 100,9   100,100")
        .blog__nav
            ul.blog__list
                -
                    var titles = [
                        'Самое важное и SASS',
                        'Приёмы в вёрстке, без которых не обходится ни один сайт',
                        'Самый необходимый набор Gulp плагинов',
                        'Почему я выбрал Jade'
                    ]
                each item in titles
                    li.blog_list-item
                        a.blog_list-link #{item}
